  </div>

  <div class="field">
    <%= form.label :date_at %>
    <%= form.date_select :date_at %>
  </div>

  <div class="field">
    <%= form.label :date_end %>
    <%= form.date_select :date_end %>
  </div>

  <div class="field">
    <%= form.label :content %>
