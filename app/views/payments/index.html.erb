<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Kvit num</th>
      <th>Date at</th>
      <th>Suma</th>
      <th>Content</th>
      <th>Order_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.kvit_num %></td>
        <td><%= payment.date_at %></td>
        <td><%= payment.suma %></td>
        <td><%= payment.content %></td>
        <td><%= payment.order_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

