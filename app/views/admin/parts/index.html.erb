<p id="notice"><%= notice %></p>

<h1>Parts</h1>
<h5>Предмет: <%= @book.book %> </h5>

<table>
  <thead>
    <tr>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part %></td>
        <td><%= link_to 'Edit | ', edit_admin_part_path(part) %></td>
        <td><%= link_to 'Destroy', {controller: "admin/parts", action: "destroy", id: part.id}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'ВОПРОСЫ', controller: "admin/questions", action: "index", id: part.id %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

